<% include ./partials/header %>

  <div class="flex-column">
    <h1>Todos</h1>
    <table class="table">
      <tr>
        <th>Item</th>
        <th style="padding-left: 7px; padding-right: 7px;"> Update </th>
        <th style="padding-left: 7px; padding-right: 7px;"> Delete? </th>
        <th style="padding-left: 7px; padding-right: 7px;"> Complete? </th>
      </tr>
      <% todos.forEach( todo => { %>
      <tr>
        <div>
          <td>
            <p class="flex-center item"><%= todo.item %></p>
          </td>
        </div>
        <div>
          <td>
            <a class="flex-center update" href='/update/<%=todo.id%>'>update</a>
          </td>
        </div>
        <div>
          <td>
            <a class="flex-center delete" href='/delete/<%=todo.id%>'>X</a>
          </td>
        </div>
        <div>
          <td>
            <a class="flex-center complete" href='/complete/<%=todo.id%>'>ðŸ¤˜</a>
          </td>
        </div>
      </tr>
      <% }); %>
    </table>
    <h1>Add new:</h1>
    <form action="/add" method="POST">
      <input type="text" name="item"/>
      <input type="submit"/>
    </form>
  </div>

<% include ./partials/footer %>
